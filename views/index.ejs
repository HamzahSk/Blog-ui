<!DOCTYPE html>
<html lang="id" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zah Dev - Blog Teknologi</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome untuk Ikon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">Zah Dev</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#posts">Postingan</a></li>
                    <li class="nav-item"><a class="nav-link" href="/new">Buat Post</a></li>
                </ul>
                <div class="d-flex align-items-center">
                    <span class="navbar-text me-3" title="Total Pengunjung">
                        <i class="fas fa-eye me-1"></i> <%= visitorCount.toLocaleString('id-ID') %>
                    </span>
                    <form class="d-flex" role="search">
                        <input class="form-control form-control-sm me-2" type="search" placeholder="Cari..." aria-label="Search">
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- HERO SECTION -->
    <header class="hero-section d-flex align-items-center justify-content-center text-center">
        <div class="container">
            <h1 class="display-3 fw-bold">Welcome to Zah Dev</h1>
            <p class="lead col-lg-6 mx-auto">Blog seputar teknologi, programming, pengembangan bot, dan tutorial bermanfaat lainnya.</p>
            <a href="#posts" class="btn btn-primary btn-lg mt-3">Lihat Postingan</a>
        </div>
    </header>

    <!-- KONTEN POSTINGAN -->
    <main id="posts" class="py-5">
        <div class="container">
            <h2 class="text-center mb-5 section-title"><span>Postingan Terbaru</span></h2>
            <div class="row g-4">
                <% if (posts.length > 0) { %>
                    <% posts.forEach(post => { %>
                        <div class="col-lg-4 col-md-6">
                            <div class="card h-100 shadow-sm post-card">
                                <% if (post.imageUrl) { %>
                                    <img src="<%= post.imageUrl %>" class="card-img-top" alt="Post Image">
                                <% } %>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title"><%= post.title %></h5>
                                    <p class="card-text text-white-50 small"><%= new Date(post.createdAt).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' }) %></p>
                                    <p class="card-text flex-grow-1"><%- post.content.substring(0, 100) %>...</p>
                                    <a href="#" class="btn btn-outline-primary mt-auto">Baca Selengkapnya</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-center">Belum ada postingan.</p>
                <% } %>
            </div>
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-white-50 text-center py-4">
        <div class="container">
            <p class="mb-0">&copy; <%= new Date().getFullYear() %> Zah Dev. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
